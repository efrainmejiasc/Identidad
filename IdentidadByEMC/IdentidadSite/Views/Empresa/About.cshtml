 @{
     Layout = "~/Views/Shared/_LayoutBuild.cshtml";
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/scriptsSite/empresa/jsAbout.js"></script>
    <link rel="stylesheet" type="text/css" href="~/js/dataTables/datatables.css" />
    <script type="text/javascript" src="~/js/dataTables/datatables.js"></script>
    <link rel="stylesheet" href="~/js/toastr/toastr.css" />
    <script src="~/js/toastr/toastr.min.js"></script> 
}

<script>
    var urlAddEmpresa= '@Url.Action("AddEmpresa","Empresa")';
</script>


<div class="card" style="margin-top:5%;">
    <div class="card-body">

        <div class="form-horizontal" style="color:dimgray">
            <div class="form-group row">
                    <div class="col-md-8">
                        <h1 style="color:dimgray"> Afiliar Empresa</h1>
                    </div>
                    <div class="col-md-3 text-md-right">
                        <a href=@Url.Action("Index","Empresa")  class="btn btn-primary" >Todas las Empresas</a>
                    </div>
            </div>
               
                <div class="form-group row">
                    <div class="col-md-3 text-md-right">
                        <label class="control-label">Nombre Empresa</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="nombre" class="form form-control" autocomplete="off" required />
                    </div>

                    <div class="col-md-3 text-md-right">
                        <label class="control-label">Rfc</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="rfc" class="form form-control" autocomplete="off" required />
                    </div>
                    <div class="col-md-3 text-md-right">
                        <label class="control-label">Direccion</label>
                    </div>
                    <div class="col-md-8">
                      <input type="text" id="direccion" class="form form-control" autocomplete="off" required />
                    </div>
                    <div class="col-md-3 text-md-right">
                        <label class="control-label">Telefono</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" id="telefono" class="form form-control" autocomplete="off" required />
                    </div>
                    <div class="col-md-3 text-md-right">
                        <label class="control-label">Email</label>
                    </div>
                    <div class="col-md-8">
                        <input type="email" id="email" class="form form-control" autocomplete="off" required />
                    </div> <hr />
                   <div class="col-md-3 text-md-right">
                        <label class="control-label">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                    </div>
                   
                    <div class="col-md-8">
                        <input type="button" value="Aceptar" class="btn btn-success form-control" onclick="CrearEmpresa();" />
                    </div>

                </div>

            </div>

        </div>
</div>